{
	"extends": "stylelint-config-standard",
	"rules": {
		"indentation": 2,
		"property-no-unknown": [
			true,
			{
				ignoreProperties: [
					"footnote-style-position",
					"hyphenate-before",
					"hyphenate-after",
					"hyphenate-lines",
					"margin-inside",
					"margin-outside",
					"prince-bookmark-level",
					"prince-footnote-policy",
					"prince-image-resolution",
					"prince-page-group"
				]
			}
		],
		"selector-pseudo-element-no-unknown": [
			true,
			{
				ignorePseudoElements: [
					"footnote-call"
				]
			}
		]
	}
}
